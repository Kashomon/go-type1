\newcount\jigofontsize
\newbox\jigobox
\newdimen\jigodimen

\def\jigosetfontsize#1{%
  \ifnum #1>17\relax%
    \global\jigofontsize=20\relax%
    \jigofonts{20}\relax%
  \else%
  \ifnum #1>13\relax%
  \global\jigofontsize=15\relax%
    \jigofonts{15}\relax%
  \else%
  \ifnum #1>12\relax% 
    \global\jigofontsize=12\relax%
    \jigofonts{12}\relax%
  \else%
  \ifnum #1<5\relax%
    \global\jigofontsize=5\relax%
    \jigofonts{5}\relax%
  \else%
    \global\jigofontsize=#1\relax%
    \jigofonts{#1}\relax%
  \fi\fi\fi\fi%
}

\def\jigofonts#1{%
  \global\font\jigofont=igo#1 at #1truept%
  \global\font\jigofontbi=igoblacki#1 at #1truept%
  \global\font\jigofontwi=igowhitei#1 at #1truept%
  \global\font\jigofontbii=igoblackii#1 at #1truept%
  \global\font\jigofontwii=igowhiteii#1 at #1truept%
  \global\font\jigofontbiii=igoblackiii#1 at #1truept%
  \global\font\jigofontwiii=igowhiteiii#1 at #1truept%
  % We don't currently need these.
  \global\setbox\jigobox=\hbox{\jigofont\char0}%
  \global\jigodimen=\wd\jigobox%
}

% Declare the default fontsize to be 12pt
\jigofonts{12}

% Magic overlapping foncution which overlaps two glyphs
\def\jigolap#1#2{%
  {%
  #1%
  \hskip -\wd\jigobox%
  #2%
  }%
}

% All glyphs are smaller than they should be, which is unfortunate. thus, we
% have 'fixing' glyphs for each of the 9 base intersection types.

% We use abbreviations for brevity in the generated tex.
\def\jigofixm{{\jigofont\char10}}    % fix middle
\def\jigofixl{{\jigofont\char11}}    % fix left
\def\jigofixr{{\jigofont\char12}}    % fix right
\def\jigofixt{{\jigofont\char13}}    % fix top
\def\jigofixb{{\jigofont\char14}}    % fix bottom
\def\jigofixbr{{\jigofont\char15}}   % fix bottom right
\def\jigofixbl{{\jigofont\char16}}   % fix bottom left
\def\jigofixtr{{\jigofont\char17}}   % fix top right
\def\jigofixtl{{\jigofont\char18}}   % fix top  left

\def\jigowstone{{\jigofontwi\char0}}

\def\jigotop{%
  {\jigofont\char4}%
}


\def\jigolaptest{%
  \jigolap{\jigofixt}{\jigowstone}
}

